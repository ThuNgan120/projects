<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <h1 class="text-center">Sign Up</h1>
    <%= form_with(model: @user, url: users_path, local: true, class: "needs-validation") do |form| %>
      <div class="mb-3">
        <%= form.label :email_address, class: "form-label" %>
        <%= form.email_field :email_address, class: "form-control", placeholder: "Enter email" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
      </div>

      <%= form.submit "Sign Up", class: "btn btn-primary w-100" %>
    <% end %>
  </div>
</div>