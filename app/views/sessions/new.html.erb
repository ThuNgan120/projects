<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header text-center bg-primary text-white">
          <h3>Login</h3>
        </div>
        <div class="card-body">
          <%= form_with url: login_path, method: :post, class: "needs-validation", local: true do |form| %>
            <div class="mb-3">
              <%= form.label :email_address, "Email Address", class: "form-label" %>
              <%= form.email_field :email_address, class: "form-control", required: true, placeholder: "Enter your email" %>
            </div>
            <div class="mb-3">
              <%= form.label :password, "Password", class: "form-label" %>
              <%= form.password_field :password, class: "form-control", required: true, placeholder: "Enter your password" %>
            </div>
            <div class="d-grid">
              <%= form.submit "Sign in", class: "btn btn-primary" %>
            </div>
          <% end %>
          <div class="mt-3 text-center">
            <%= link_to "Forgot password?", new_password_path, class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
