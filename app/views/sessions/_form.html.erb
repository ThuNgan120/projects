<%= form_with url: login_path, method: :post, class: "needs-validation", local: true do |form| %>
    <div class="mb-3">
      <%= form.label :email_address, "Email Address", class: "form-label" %>
      <%= form.email_field :email_address, class: "form-control", required: true, placeholder: "Enter your email" %>
    </div>
    <div class="mb-3">
      <%= form.label :password, "Password", class: "form-label" %>
      <%= form.password_field :password, class: "form-control", required: true, placeholder: "Enter your password" %>
    </div>
    <div class="d-grid">
      <%= form.submit "Sign in", class: "btn btn-primary" %>
    </div>
  <% end %>
  