<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Sign Up</h1>
      <%= form_with(model: @user, url: users_path, local: true, class: "needs-validation") do |form| %>
        <!-- Email Field -->
        <div class="mb-3">
          <%= form.label :email_address, "Email Address", class: "form-label" %>
          <%= form.email_field :email_address, class: "form-control", placeholder: "Enter your email", required: true %>
        </div>

        <!-- Password Field -->
        <div class="mb-3">
          <%= form.label :password, "Password", class: "form-label" %>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="mb-3">
          <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password", required: true %>
        </div>

        <!-- Submit Button -->
        <div class="d-grid">
          <%= form.submit "Sign Up", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <!-- Link to login page -->
      <p class="text-center mt-3">
        Already have an account? <%= link_to 'Log In', login_path, class: "text-decoration-none" %>
      </p>
    </div>
  </div>
</div>
